<!-- hello-gif.handlebars -->
<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 5px;
        flex: 0 0 100%;
        }

        .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

        img {
        border-radius: 5px 5px 0 0;
        }

        .container {
        padding: 2px 16px;
        }
        input[type=submit]
        {
            background-color: white;
            border: 0px;

        }
        input[type=text]
        {
            margin: 1%;
            padding: 0.5%;
        }
</style>
<!-- show a gif passed from the route -->
<nav class="navbar navbar-light bg-info">
  <center><h4>Yashsvi Girdhar Sachit Chhabra Term project</h4></center>
</nav>
<!--/.Navbar-->
<div class ="container-fluid" style="display: flex; flex-flow: row wrap;" >
    
        <div class ="row" style="margin: auto;">
            {{#each gifs}}
            <center>
                <div class="card" style="margin: 2%;">
                    
                    <div class="container-fluid">
                        <input type ="text" value ="{{this.title}}">
                        <input type ="text" value ="{{this.user.username}}">
                    </div>
                    
                    <input type ="text" placeholder="Change picture"/>
                    <img src="{{this.images.fixed_height.url}}" alt="">

                    
                        <div class="container">
                            <form method="post" action="/edit">
                               <p><i class="fa fa-edit"></i><input type ="submit" id ="{{this.id}}" value ="Save"></input></p>
                            </form>
                            
                        </div>
                    
                </div>
                </center>

            {{/each}}
        </div>

</div>
